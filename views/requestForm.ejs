<div class = " px-4 py-5 my-5 text-center ">
    <h1 class = " display -5  fw-bold" > Make your request</h1>
    <div class = "col-lg-6 mx-auto">
        <p class = "lead">Share your amazing request with us. Fill our form to get started</p>
    </div>
</div>


<div class = "row justify-content-center">
    <% if(infoSubmitObj != '') { %>
        <div class = "col-8 alert alert-success" role="alert">
           <%= infoSubmitObj %>
        </div>
        
        <% }%>
        <% if(infoErrorsObj != '') { %>
            <div class = "col-8 alert alert-danger" role="alert">
               <%= infoErrorsObj %>
            </div>
            
            <% }%>
    <div class = "col-8" >
        <form action="/requestForm" enctype=" multipart/form-data" method="POST">
            <div class = "row g-3" >
                <div class = "col-12">
                    <label for = "email" class="form-label">Email</label>
                    <input type="email" name = "email" id = "email" class = "form-control">
                </div>
                <div class = "col-12">
                    <label for = "Name" class="form-label">Name</label>
                    <input type="text" name = "name" id = "name" class = "form-control">
                </div>
                <div class = "col-12">
                    <label for = "email" class="form-label">Description</label>
                    <textarea type="text" name = "description" id = "descrption" class="form-control" cols = "30" rows = "4"></textarea>
                </div>
                <div class = "col-12">
                    <label for = "category">Select Category</label>
                    <select class = "form-select form-control" name = "category" label = "category">
                        <option selected>Select Category</option>
                        <option value = "dates">Dates</option>
                        <option value = "pista">Pista</option>
                        <option value = "almonds">Almonds</option>
                        <option value = "cashew">Cashew</option>
                        <option value = "makhana">Makhana</option>
                    </select>
                </div>
                <div class = "col-12">
                    <button type="submit" class="btn btn-primary btn-dark btn-lg"> Submit Your Request</button>
                </div>
            </div>
        </form>
    </div>
</div>