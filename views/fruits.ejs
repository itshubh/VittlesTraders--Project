<% if(fruits != null) {%>

    <nav area-label = "breadcrumb">
        <ol class="breadcrumb">
          <li class = "breadcrumb-item"><a href="/">Home</a>
            <li class = "breadcrumb-item active" aria-current="page"><%- fruits.name%>
        </ol>
    </nav>
    

<div class="row">

    <div class="col-12 col-md-4">
        <img src="/uploads/<%- fruits.image%>" class = "img-fluid sticky-top" style = "top : 20px;height: 100%; width: 100%;" alt = "<%- fruits.name%>" loading = " lazy ">
    </div>

    <div class ="col-12 col-md-8 ">
        <div class = "row" >
            <div class = "col-12 ">
                <h1><%- fruits.name%></h1>
            </div>
            <div class = "col-12  mb-4" >
                <i class="bi bi-tag" ><%- fruits.category%></i>
            </div>
            <div class = "col-12" style = "white-space: pre-line;" >
               <h4>About</h4>
               <%- fruits.description%>
            </div>
        </div>

        <div  class = "row">
            <div class = "col-12">
                <h4>Nutrition</h4>
                <ul class = "list group list-group-flush">
                    <%fruits.nutrition.forEach(function(nutri,index){%>
                        <li class = "list-group-item"> <%= nutri%></li>
                    <% }) %>    

                </ul>
            </div>
        </div>
    </div>

</div>


<% }else {%>
    <p> NO ITEM FOUND </p>
<% } %>    